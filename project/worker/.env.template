# Copy this file to .env and fill in your values

# ==============================================
# DATABASE
# ==============================================
# Copy from your main project .env file
DATABASE_URL=postgresql://postgres.xxx:xxx@xxx.supabase.co:5432/postgres

# ==============================================
# RAID (IronDrive Storage System)
# ==============================================
# Contact IBA RAID administrator for these values
RAID_PUBLISHER_SECRET=your-secret-key-here
RAID_PUB_ENDPOINT=https://raid.ibaproject.bid/pub/download

# ==============================================
# B2 STORAGE (Backblaze)
# ==============================================
# Get from Backblaze B2 dashboard â†’ App Keys
B2_KEY_ID=your-b2-key-id
B2_APP_KEY=your-b2-application-key
B2_BUCKET=IBA-Lot-Media
B2_ENDPOINT=s3.us-west-004.backblazeb2.com
B2_REGION=us-west-004

# ==============================================
# CDN
# ==============================================
# Full CDN base URL including bucket path (no trailing slash)
CDN_BASE_URL=https://cdn.ibaproject.bid/file/IBA-Lot-Media

# ==============================================
# WORKER CONFIGURATION (Optional)
# ==============================================
# How often to check for new jobs (milliseconds)
WORKER_POLL_INTERVAL=15000

# Maximum retry attempts for failed jobs
MAX_RETRIES=5

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Number of concurrent jobs to process
CONCURRENCY=3
